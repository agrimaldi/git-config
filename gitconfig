[user]
    name = Alexis GRIMALDI
    email = alexis.grimaldi@gmail.com
[core]
    excludesfile = ~/.gitignore
    editor = /usr/bin/vim
    fileMode = false
[gc]
    auto=1
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[alias]
    unstage = reset HEAD
    uncommit = reset --soft HEAD^
    d = diff
    ds = diff --staged
    co = checkout
    st = status
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[difftool]
	prompt = false
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
    summary = true
